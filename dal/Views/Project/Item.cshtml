<div id="content-title">
    <div class="container">
        <div class="row-fluid">
            <div class="span9">
                <h3 class="title">@ViewBag.ProjectTitle</h3>
            </div>
            <div class="span3">
                <ul class="pager">
                    <li class="next">
                        <a href="/Projects" class="shake">← Back</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

</div>
<div id="content-body" class="services">

    <div class="container">

        <div class="row-fluid">

            <div class="span4">                
                @Html.Partial("_Summary")
            </div>
            

            <div class="span8">

                <div class="row-fluid">
                    <div class="span12">
                        <div class="flexslider flexslider_single clearfix">

                            <div class="flex-viewport" style="overflow: hidden; position: relative;">
                                <ul class="slides" style="width: 800%; -webkit-transition: 0.6s; -webkit-transform: translate3d(0px, 0, 0);">
                                    <li style="width: 385px; float: left; display: block;">
                                        <div class="work img-polaroid">
                                            <a class="fancybox-button" rel="fancybox-button" title="Feature #2" href="assets/img/work/work1.jpg">
                                                <div class="overlay-zoom">
                                                    <img src="/assets/img/work/work1.jpg" alt="project 2">
                                                    <div class="zoom-icon"></div>
                                                    <div class="desc">Feature #2</div>
                                                </div>
                                            </a>
                                        </div>
                                    </li>
                                    <li style="width: 385px; float: left; display: block;">
                                        <div class="work img-polaroid">
                                            <a class="fancybox-button" rel="fancybox-button" title="Feature #2" href="assets/img/work/work2.jpg">
                                                <div class="overlay-zoom">
                                                    <img src="/assets/img/work/work2.jpg" alt="project 2">
                                                    <div class="zoom-icon"></div>
                                                    <div class="desc">Feature #2</div>
                                                </div>
                                            </a>
                                        </div>
                                    </li>
                                    <li style="width: 385px; float: left; display: block;">
                                        <div class="work img-polaroid">
                                            <a class="fancybox-button" rel="fancybox-button" title="Feature #3" href="assets/img/work/work3.jpg">
                                                <div class="overlay-zoom">
                                                    <img src="/assets/img/work/work3.jpg" alt="project 3">
                                                    <div class="zoom-icon"></div>
                                                    <div class="desc">Feature #3</div>
                                                </div>
                                            </a>
                                        </div>
                                    </li>
                                    <li style="width: 385px; float: left; display: block;">
                                        <div class="work img-polaroid">
                                            <a class="fancybox-button" rel="fancybox-button" title="Feature #4" href="assets/img/work/work4.jpg">
                                                <div class="overlay-zoom">
                                                    <img src="/assets/img/work/work4.jpg" alt="project 4">
                                                    <div class="zoom-icon"></div>
                                                    <div class="desc">Feature #4</div>
                                                </div>
                                            </a>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                            <ol class="flex-control-nav flex-control-paging">
                                <li><a class="flex-active">1</a></li>
                                <li><a class="">2</a></li>
                            </ol>
                        </div>
                    </div>
                </div>

                <div class="row-fluid margin-top-70">
                    <div class="span6">
                        @Html.Raw(ViewBag.Body)
                    </div>
                    <div class="span6">
                        <p>
                            <iframe src="http://player.vimeo.com/video/9178386?badge=0" width="100%" height="300" frameborder="0" webkitallowfullscreen="" mozallowfullscreen="" allowfullscreen=""></iframe>
                        </p>
                    </div>
                </div>

            </div>

        </div>
    </div>

</div>