@model dal.Models.ProjectModel[]

<div id="content-title">

    <div class="container">
        <h3 class="title">Projects</h3>
    </div>

</div>
<!-- /content-title -->

<div id="content-body" class="projects">

    <div class="container">

        <div class="row-fluid margin-top-15">

            <div class="span9">



            @for (var i = 0; i < Model.Length; i++)
            {
                var project = Model[i];
                
                if (i % 3 == 0)
                {                          
                    @:<div class="row-fluid">
                }


                <div class="span4">
                    <div class="work img-polaroid">
                        <div class="work-item">
                            <img src="@project.Img" alt="project 1">
                            <div class="work-info">
                                <div class="work-title">@project.Title</div>
                                <div class="work-body">@project.Text</div>
                                <a class="work-link shake" href="@project.Url">
                                    <i class="icon-plus"></i>&nbsp;Learn more
                                </a>
                            </div>
                        </div>
                        <div class="desc">
                            @project.Description
                        </div>
                    </div>
                </div>
                
                if (i != 0 && ((i + 1) % 3 == 0 || i == Model.Length - 1))
                {                          
                    @:</div>
                }
            }

            </div>

            <div class="span3 1padding-left-30 sidebar clearfix margin-bottom-10">

                <ul class="nav nav-list margin-top-5">
                    <li class="active"><a href="#"><i class="icon-chevron-left"></i>Highlighted projects</a></li>
                </ul>
            </div>

        </div>

    </div>

</div>

